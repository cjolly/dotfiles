export EDITOR=vim

GIT_PS1_SHOWDIRTYSTATE=true
GIT_PS1_SHOWUNTRACKEDFILES=true
GIT_PS1_SHOWSTASHSTATE=true

# http://www.gnu.org/software/bash/manual/html_node/Bash-History-Facilities.html
HISTSIZE=4096
HISTFILESIZE=4096
HISTTIMEFORMAT='%F %T '
HISTCONTROL=ignoredups
HISTIGNORE=exit

# Customize colorized output from ls
# http://geoff.greer.fm/lscolors/
export CLICOLOR=1
export LSCOLORS=gxfxcxdxbxegedabagacad
